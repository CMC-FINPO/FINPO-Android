<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.finpo.app.ui.home.HomeViewModel" />
        <variable
            name="data"
            type="com.finpo.app.model.remote.PolicyContent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:background="@drawable/bg_solid_w01_rounded_none_5"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_region"
            style="@style/l1_13"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@drawable/bg_solid_p02_rounded_5"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:textColor="@color/point_p01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            detailRegion="@{data.region.name}"
            region="@{data.region.parent.name}"
            tools:text="서울 동대문구" />

        <TextView
            android:id="@+id/tv_policy_name"
            style="@style/h3_16_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_region"
            android:text="@{data.title}"
            tools:text="공고명-정책이름" />

        <TextView
            android:id="@+id/tv_institution_name"
            style="@style/l1_13"
            android:textColor="@color/gray_g02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_policy_name"
            android:text="@{data.institution}"
            tools:text="기관명" />

        <ImageView
            android:id="@+id/iv_scrap"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_scrap_inactive"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintTop_toTopOf="@id/iv_scrap"
            app:layout_constraintEnd_toStartOf="@id/iv_scrap"
            app:layout_constraintBottom_toBottomOf="@id/iv_scrap"
            android:textColor="@color/gray_g02"
            android:layout_marginEnd="2dp"
            style="@style/h5_14_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>