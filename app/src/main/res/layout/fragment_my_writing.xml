<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.finpo.app.ui.my_page.MyPageViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_g09"
        tools:context=".ui.my_page.my_writing.MyWritingFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:onRefreshListener="@{() -> viewModel.myWritingLiveData.refreshWriting()}"
            app:refreshing="@{viewModel.myWritingLiveData.refreshed}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_community"
                doScrollBottom="@{() -> viewModel.myWritingLiveData.addWriting()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager=".utils.LinearLayoutManagerWrapper"
                tools:listitem="@layout/item_recycler_my_page_writing" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </FrameLayout>
</layout>