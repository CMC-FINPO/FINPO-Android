<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finpo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/point_p01</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/point_p01</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/FinfoAppbar</item>
        <item name="android:datePickerStyle">@style/FinpoDatePicker</item>
    </style>

    <style name="Theme.Finpo.Splash">
        <item name="android:windowBackground">@color/point_p01</item>
        <item name="android:statusBarColor">@color/point_p01</item>
    </style>

    <style name="Theme.Finpo.Splash12">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/point_p01</item>
        <item name="android:statusBarColor">@color/point_p01</item>
    </style>

    <style name="FinfoAppbar" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/white_w01</item>
    </style>
    <style name="FinpoDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>